<Window x:Class="SportProgramm.Pages.AddEditTournamentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportProgramm.Pages"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Icon="\Resources\Logo.png"
        Title="Добавить турнир" Height="650" Width="800">
    <Border Style="{StaticResource AdminPanelStyle}" Margin="20">
        <StackPanel>
            <TextBlock Text="Добавить турнир" Style="{StaticResource AdminSectionTitle}"/>

            <StackPanel Margin="0 20">
                <TextBlock Text="Название турнира*" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="NameTextBox" Height="42" FontSize="14" Padding="10"/>

                <TextBlock Text="Место проведения*" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <TextBox x:Name="PlaceTextBox" Height="42" FontSize="14" Padding="10"/>

                <TextBlock Text="Лучший результат" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <TextBox x:Name="ScoreTextBox" Height="42" FontSize="14" Padding="10"/>

                <TextBlock Text="Дата турнира*" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <DatePicker x:Name="DatePicker" Height="42" FontSize="14"/>

                <TextBlock Text="Вид спорта*" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <ComboBox x:Name="SportComboBox" Height="42" FontSize="14" 
                          DisplayMemberPath="Name"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20">
                <Button Content="Отмена" Style="{StaticResource AdminButtonStyle}" 
                        Background="#95a5a6" Click="Cancel_Click" Margin="0 0 10 0"/>
                <Button Content="Сохранить" Style="{StaticResource SuccessButtonStyle}" 
                        Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
