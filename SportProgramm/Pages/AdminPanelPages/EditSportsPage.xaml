<Page x:Class="SportProgramm.Pages.AdminPanelPages.EditSportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportProgramm.Pages.AdminPanelPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditSportsPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопка добавления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 20">
            <TextBlock Text="Редактирование видов спорта" 
                       FontSize="24" FontWeight="Bold" Foreground="#2c3e50"/>
            <Button Content="Добавить вид спорта" Style="{StaticResource SuccessButtonStyle}"
                    Click="AddSport_Click" Margin="20 0 0 0" Padding="15 10"/>
        </StackPanel>

        <!-- Список видов спорта -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="SportsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource NewsSectionStyle}" Margin="0 10">
                            <Grid Margin="15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Unit}" FontSize="12" Foreground="#7f8c8d" Margin="0 5 0 0"/>
                                    <TextBlock Text="{Binding Record}" FontSize="12" Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy'}" 
                                               FontSize="11" Foreground="#95a5a6" Margin="0 5 0 0"/>
                                </StackPanel>

                                <Button Grid.Column="1" Content="Редактировать" 
                                        Style="{StaticResource AdminButtonStyle}"
                                        Click="EditSport_Click" Tag="{Binding Id}"
                                        Margin="10 0" Padding="10 5"/>

                                <Button Grid.Column="2" Content="Удалить" 
                                        Style="{StaticResource DangerButtonStyle}"
                                        Click="DeleteSport_Click" Tag="{Binding Id}"
                                        Padding="10 5"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Кнопка назад -->
        <Button Grid.Row="2" Content="Назад" Style="{StaticResource AdminButtonStyle}"
                Click="Back_Click" HorizontalAlignment="Left" Margin="0 20 0 0"/>
    </Grid>
</Page>
