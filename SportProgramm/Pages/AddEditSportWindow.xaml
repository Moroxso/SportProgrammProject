<Page x:Class="SportProgramm.Pages.AddEditSportWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportProgramm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSportWindow">

    <Border Style="{StaticResource AdminPanelStyle}" Margin="20">
        <StackPanel>
            <TextBlock Text="Добавить вид спорта" Style="{StaticResource AdminSectionTitle}"/>

            <StackPanel Margin="0 20">
                <TextBlock Text="Название вида спорта*" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="NameTextBox" Height="35" FontSize="14" Padding="10"/>

                <TextBlock Text="Единица измерения" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <TextBox x:Name="UnitTextBox" Height="35" FontSize="14" Padding="10"/>

                <TextBlock Text="Рекорд" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <TextBox x:Name="RecordTextBox" Height="35" FontSize="14" Padding="10"/>

                <TextBlock Text="Дата установки рекорда" FontWeight="SemiBold" Margin="0 15 0 5"/>
                <DatePicker x:Name="DatePicker" Height="35" FontSize="14"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20">
                <Button Content="Отмена" Style="{StaticResource AdminButtonStyle}" 
                        Background="#95a5a6" Click="Cancel_Click" Margin="0 0 10 0"/>
                <Button Content="Сохранить" Style="{StaticResource SuccessButtonStyle}" 
                        Click="Save_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Page>
