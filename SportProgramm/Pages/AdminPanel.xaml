<Page x:Class="SportProgramm.Pages.AdminPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportProgramm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1014" d:DesignWidth="1920"
      Title="AdminPanel">

    <ScrollViewer VerticalScrollBarVisibility="Hidden" MaxHeight="820">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Grid.Row="0" Text="Панель администрирования" 
                       FontSize="28" FontWeight="Bold" Foreground="#2c3e50"
                       HorizontalAlignment="Center" Margin="0 0 0 30"/>

            <!-- Управление видами спорта -->
            <Border Grid.Row="1" Style="{StaticResource AdminPanelStyle}">
                <StackPanel>
                    <TextBlock Text="Управление видами спорта" Style="{StaticResource AdminSectionTitle}"/>

                    <StackPanel Orientation="Horizontal" Margin="0 10">
                        <Button Style="{StaticResource SuccessButtonStyle}" Content="Добавить вид спорта" 
                                Click="AddSport_Click" Width="240" Margin="0 0 15 0"/>
                        <Button Style="{StaticResource AdminButtonStyle}" Content="Редактировать виды спорта" 
                                Click="EditSports_Click" Width="240"/>
                    </StackPanel>

                    <!-- Список существующих видов спорта -->
                    <TextBlock Text="Существующие виды спорта:" FontWeight="SemiBold" Margin="0 15 0 10"/>
                    <ItemsControl x:Name="SportsList" Height="150">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8f9fa" CornerRadius="4" Margin="0 2" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                        <Button Grid.Column="1" Content="Удалить" Style="{StaticResource DangerButtonStyle}"
                                                Click="DeleteSport_Click" Tag="{Binding Id}" Padding="10 5" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Управление турнирами -->
            <Border Grid.Row="2" Style="{StaticResource AdminPanelStyle}" Margin="0 15">
                <StackPanel>
                    <TextBlock Text="Управление турнирами" Style="{StaticResource AdminSectionTitle}"/>

                    <StackPanel Orientation="Horizontal" Margin="0 10">
                        <Button Style="{StaticResource SuccessButtonStyle}" Content="Добавить турнир" 
                                Click="AddTournament_Click" Width="240" Margin="0 0 15 0"/>
                        <Button Style="{StaticResource AdminButtonStyle}" Content="Редактировать турниры" 
                                Click="EditTournaments_Click" Width="240"/>
                    </StackPanel>

                    <!-- Список существующих турниров -->
                    <TextBlock Text="Последние турниры:" FontWeight="SemiBold" Margin="0 15 0 10"/>
                    <ItemsControl x:Name="TournamentsList" Height="150">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8f9fa" CornerRadius="4" Margin="0 2" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Place}" FontSize="11" Foreground="#7f8c8d"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Редактировать" Style="{StaticResource AdminButtonStyle}"
                                                Click="EditTournament_Click" Tag="{Binding Id}" Padding="10 5" FontSize="11" Margin="5 0"/>
                                        <Button Grid.Column="2" Content="Удалить" Style="{StaticResource DangerButtonStyle}"
                                                Click="DeleteTournament_Click" Tag="{Binding Id}" Padding="10 5" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Управление спортсменами -->
            <Border Grid.Row="3" Style="{StaticResource AdminPanelStyle}" Margin="0 15">
                <StackPanel>
                    <TextBlock Text="Управление спортсменами" Style="{StaticResource AdminSectionTitle}"/>

                    <StackPanel Orientation="Horizontal" Margin="0 10">
                        <Button Style="{StaticResource SuccessButtonStyle}" Content="Добавить спортсмена" 
                                Click="AddSportsman_Click" Width="240" Margin="0 0 15 0"/>
                        <Button Style="{StaticResource AdminButtonStyle}" Content="Редактировать спортсменов" 
                                Click="EditSportsmen_Click" Width="240"/>
                    </StackPanel>

                    <!-- Список существующих спортсменов -->
                    <TextBlock Text="Последние спортсмены:" FontWeight="SemiBold" Margin="0 15 0 10"/>
                    <ItemsControl x:Name="SportsmenList" Height="150">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8f9fa" CornerRadius="4" Margin="0 2" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Team}" FontSize="11" Foreground="#7f8c8d"/>
                                        </StackPanel>
                                        <Button Grid.Column="1" Content="Редактировать" Style="{StaticResource AdminButtonStyle}"
                                                Click="EditSportsman_Click" Tag="{Binding Id}" Padding="10 5" FontSize="11" Margin="5 0"/>
                                        <Button Grid.Column="2" Content="Удалить" Style="{StaticResource DangerButtonStyle}"
                                                Click="DeleteSportsman_Click" Tag="{Binding Id}" Padding="10 5" FontSize="11"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
