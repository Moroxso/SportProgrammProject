<Page x:Class="SportProgramm.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportProgramm.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1014" d:DesignWidth="1920"
      Title="Registration">

    <Grid>

        <StackPanel Width="350"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 160 0 0">
            <Border Style="{StaticResource ShadowBorderTwo}" >
                <StackPanel Margin="0 20 0 0">
                    <StackPanel>
                        <Image Source="\Resources\Logo.png" Width="60" ></Image>
                    </StackPanel>
                    <TextBlock Margin="25 15 10 10">Введите Логин:</TextBlock>
                    <TextBox Margin="20 0 20 5" Padding="3" ></TextBox>
                    <TextBlock Margin="25 10 10 10">Введите Пароль:</TextBlock>
                    <PasswordBox Margin="20 0 20 10" Padding="3"></PasswordBox>
                    <TextBlock Margin="25 0 10 10">Подтвердите Пароль:</TextBlock>
                    <PasswordBox Margin="20 0 20 35" Padding="3"></PasswordBox>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 20">
                        <Button Width="200" Height="40" Margin="20 10 0 10" HorizontalAlignment="Left" Style="{StaticResource UIButton}">Регистрация</Button>
                        <Button Width="100" Height="40" Margin="8 10 0 10" HorizontalAlignment="Right" Style="{StaticResource UIButton}" Click="ButtonEsc">Назад</Button>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>        
    </Grid>
</Page>
